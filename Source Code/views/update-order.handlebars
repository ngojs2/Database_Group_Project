<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" type="text/css" href="/style.css">
		<title>Edit Customer</title>
	</head>
	<div class="orders">
		<h1>Edit Order{{order.orderID}}:</h1>
			<form id="update-order" class="add-form" action="/people" method="post">
    			Order Status: <input type="text" class="form-text" name="orderStatus" value="{{order.orderStatus}}"><br>
   	 			Shipped Date: <input type="text" class="form-text" name="shippedDate" value="{{order.shippedDate}}"><br>
    			Store ID: <input type="text" class="form-text" name="storeID" value="{{order.storeID}}"><br>
    			Payment: <input type="text" class="form-text" name="payment" value="{{order.payment}}"><br>
			</form>
		<button onclick="updateOrder({{order.id}})">Update</button>
	</div>
</html>
