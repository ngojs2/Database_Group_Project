<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" type="text/css" href="/style.css">
		<title>Edit Customer</title>
	</head>

	<div class="customers">
		<h1>Edit {{customer.firstName}} {{customer.lastName}}:</h1>
			<form id="update-customer" class="add-form" action="/people" method="post">
   				First name: <input type="text" class="form-text" name="firstName" value="{{customer.firstName}}"><br>
   				Last name: <input type="text" class="form-text" name="lastName" value="{{customer.lastName}}"><br>
    			Phone: <input type="text" class="form-text" name="phoneNumber" value="{{customer.phoneNumber}}"><br>
    			Email: <input type="text" class="form-text" name="email" value="{{customer.email}}"><br>
			</form>
		<button onclick="updateCustomer({{customer.id}})">Update</button>
	</div>
</html>
